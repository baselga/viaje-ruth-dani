---
const { title, date } = Astro.props;
---

<div class="notebook">
  <h2 class="head">
    <span class="title">{title}</span>
    <span class="date">{date}</span>
  </h2>  
  <slot />
</div>

<style is:global>
  .notebook {
    color: var(--color-zinc-900);
    background-color: var(--color-amber-50);
    border: 1px solid var(--color-amber-100);
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 16px;
    font-family: "Courier New", Courier, monospace;
    line-height: 1.6;
    margin: 16px auto;
    max-width: 600px;
    font-size: 1rem;    
  }

  .notebook .head {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 0;
    margin-bottom: 8px;
    gap: 4px
  }
  .notebook .head .title {
    font-size: 1.4rem;
  }
  .notebook .head .date {
    font-size: 1rem;
  }

  .notebook a {    
    color: var(--color-amber-700);
    transition: color 0.3s ease;
    &:hover {
      color: var(--color-amber-900);
    }
  }

  .notebook p {
    text-indent: 2ch;
    margin: 8px 0;
  }

  .notebook ul {
    list-style-type: square;
    padding-left: 20px;
  }

  .notebook li {
    margin-bottom: 8px;
  }

